    <div class="modal fade" id="modal-create">
      <div class="modal-dialog">
        <div class="modal-content" style="border-top: 3px solid #00a65a;">
          <form method="post" method="/admin/invoice-entry">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title">Nova NF</h4>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="inputOriginCreate">Origem</label>
                <select id="inputOriginCreate" name="origin" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <option value=""> Compra </option>
                  <option value=""> Transferência </option>
                </select>
              </div>
              <div class="form-group">
                <label for="inputInvoiceCreate">Número NF</label>
                <input type="text" class="form-control" id="inputInvoiceCreate" name="invoice">
              </div>
              <div class="form-group">
                <label for="inputIssuanceDateCreate">Data-Emissão</label>
                <input type="text" class="form-control" id="inputIssuanceDateCreate" name="issuanceDate">
              </div>
              <div class="form-group">
                <label for="inputProviderCreate">Fornecedor</label>
                <select id="inputProviderCreate" name="idProvider" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <% dataProvider.forEach(rowProvider => { %>
                  <option value="<%= rowProvider.id %>"><%= rowProvider.name %></option>
                  <% }) %>
                </select>
              </div> 
              <div class="form-group">
                <label for="inputProductCreate">Produto</label>
                <select id="inputProductCreate" name="idProduct" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <% dataProduct.forEach(rowProduct => { %>
                  <option value="<%= rowProduct.id %>"><%= rowProduct.name %></option>
                  <% }) %>
                </select>
              </div> 
              <div class="form-group">
                <label for="inputQuantityCreate">Quantidade</label>
                <input type="text" class="form-control" id="inputQuantityCreate" name="quantity">
              </div>
              <div class="form-group">
                <label for="inputPriceCreate">Preço</label>
                <input type="text" class="form-control" id="inputPriceCreate" name="price">
              </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-success">Salvar</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>

