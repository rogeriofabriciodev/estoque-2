<%- include('inc/header'); -%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Produtos
        </h1>
        <ol class="breadcrumb">
          <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
          <li class="active">Produtos</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Lista</h3>
            <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
                class="fa fa-plus"></i> Cadastrar Novo</a>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Foto</th>
                  <th>Produto</th>
                  <th>Descrição</th>
                  <th>Categoria</th>
                  <th>Preço</th>
                  <th style="min-width: 134px;">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(function(row) { %>
                  <tr data-row="<%= JSON.stringify(row) %>">
                    <td><%= row.id %></td>
                    <td><img src="/<%= row.photo %>" alt="" style="height: 18px;"></td>
                    <td><%= row.name %></td>
                    <td><%= row.description %></td>
                    <td><%= row.category %></td>
                    <td>R$<%= row.price * row.profitMargin %></td>
                    <td><button type="button" class="btn btn-xs btn-info btn-info"><i
                      class="fa fa-plus-square"></i> Info</button>&nbsp;<button type="button" class="btn btn-xs btn-info btn-update"><i
                          class="fa fa-pencil"></i> Editar</button>&nbsp;<button type="button" class="btn btn-xs btn-danger btn-delete"><i
                          class="fa fa-trash"></i> Excluir</button></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <div class="modal fade" id="modal-create">
      <div class="modal-dialog">
        <div class="modal-content" style="border-top: 3px solid #00a65a;">
          <form method="post" method="/admin/products">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title">Novo Produto</h4>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="inputNameCreate">Nome Zafiro</label>
                <input type="text" class="form-control" id="inputNameCreate" name="name">
              </div>
              <div class="form-group">
                <label for="inputModelCreate">Modelo</label>
                <input type="text" class="form-control" id="inputModelCreate" name="model">
              </div>
              <div class="form-group">
                <label for="inputProductCodeCreate">Código Zafiro</label>
                <input type="text" class="form-control" id="inputProductCodeCreate" name="productCode">
              </div>
              <div class="form-group">
                <label for="inputBrandCreate">Fabricante</label>
                <select id="inputBrandCreate" name="brand" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <% dataBrand.forEach(rowBrand => { %>
                  <option value="<%= rowBrand.name %>"><%= rowBrand.name %></option>
                  <% }) %>
                </select>
              </div> 
              <div class="form-group">
                <label for="inputProviderCreate">Fornecedor</label>
                <select id="inputProviderCreate" name="provider" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <% dataProvider.forEach(rowProvider => { %>
                  <option value="<%= rowProvider.name %>"><%= rowProvider.name %></option>
                  <% }) %>
                </select>
              </div> 
              <div class="form-group">
                <label for="inputDescriptionCreate">Descrição</label>
                <textarea class="form-control" id="inputDescriptionCreate" name="description"></textarea>
              </div>
              <div class="form-group">
                <label for="inputProfitMarginCreate">Margem</label>
                <input type="text" class="form-control" id="inputProfitMarginCreate" name="profitMargin">
              </div>
              <div class="form-group">
                <label for="inputCategoryCreate">Categoria</label>
                <select id="inputCategoryCreate" name="category" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <% dataCategory.forEach(rowCategory => { %>
                  <option value="<%= rowCategory.title %>"><%= rowCategory.title %></option>
                  <% }) %>
                </select>
              </div> 
              <div class="form-group">
                <label for="inputSubCategoryCreate">Sub-Categoria</label>
                <select id="inputSubCategoryCreate" name="subCategory" class="form-control"> 
                  <option value=""> -- selecione -- </option>
                  <% dataSubcategory.forEach(rowSubcategory => { %>
                  <option value="<%= rowSubcategory.title %>"><%= rowSubcategory.title %></option>
                  <% }) %>
                </select>
              </div> 
              <!-- <%- include('inc/selectCategories'); -%> -->
              <div class="form-group">
                <label for="inputPriceCreate">Preço</label>
                <input type="number" class="form-control" id="inputPriceCreate" name="price">
              </div>
              <div class="form-group">
                <label for="inputPhotoCreate">Foto</label>
                <img style="max-width: 128px; max-height: 128px; display: block;" src="dist/img/boxed-bg.jpg">
                <input type="file" class="form-control" id="inputPhotoCreate" name="photo">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-success">Salvar</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>

